public class Main
{
	public static void main(String[] args) {
	    int n=5;
	  
	for(int i=1;i<=n;i++){
	    char j='A';
	  for(int k=n;k>=i;k--){
	      System.out.print(j);
	      j++;
	  }System.out.println();
	}
	}
}
